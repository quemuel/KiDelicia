@model KiDelicia.Models.Produto

@{
    ViewBag.Title = "Excluir Produto";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-trash"></i>Excluir Produto</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Você está aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="@Url.Action("index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Excluir Produto</li>
            </ol>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <h3>Você tem certeza que quer excluir este produto?</h3>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th class="text-right">
                            @HttpUtility.HtmlDecode(string.Format("{0}:", Html.DisplayNameFor(model => model.CodigoProduto))):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.CodigoProduto)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @string.Format("{0}:", Html.DisplayNameFor(model => model.NomeProduto)):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.NomeProduto)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @HttpUtility.HtmlDecode(string.Format("{0}:", Html.DisplayNameFor(model => model.ValorProduto))):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.ValorProduto)
                        </td>
                    </tr>
                </table>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <br />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 btn-group">
                                @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-default" })
                                <input type="submit" value="Excluir" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @Html.Partial("_footerAdmin")
</section>