@model KiDelicia.Models.Empresa

@{
    ViewBag.Title = "Visualizar Empresa";
}
<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-building-o"></i>@ViewBag.Title</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Você está aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="@Url.Action("index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>

    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.NomeEmpresa):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.NomeEmpresa)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Representante):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Representante)
                        </td>
                     </tr>
                     <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Telefone):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Telefone)
                        </td>
                    </tr>
                     <tr>
                         <th class="text-right">
                             @Html.DisplayNameFor(model => model.Descricao):
                         </th>
                         <td class="text-left">
                             @Html.DisplayFor(model => model.Descricao)
                         </td>
                     </tr>
                </table>
                <p>
                    @Html.ActionLink("Voltar", "Index") | @Html.ActionLink("Editar", "Edit", new { id = Model.EmpresaId })
                    
                </p>
            </div>
        </div>
    </div>
    @Html.Partial("_footerAdmin")
</section>

