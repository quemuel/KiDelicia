@model KiDelicia.Models.Cliente

@{
    ViewBag.Title = "Excluir Cliente";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-trash"></i>Excluir Cliente</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Você está aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="@Url.Action("index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Excluir Cliente</li>
            </ol>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <h3>Você tem certeza que quer excluir este cliente?</h3>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.NomeCliente):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.NomeCliente)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Empresa):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Empresa)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Setor):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Setor)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Telefone):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Telefone)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Descricao):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Descricao)
                        </td>
                    </tr>
                </table>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <br/>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 btn-group">
                                @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-default" })
                                <input type="submit" value="Excluir" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @Html.Partial("_footerAdmin")
</section>
