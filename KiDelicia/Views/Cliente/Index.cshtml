@model IEnumerable<KiDelicia.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-users"></i>Listar Clientes</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Você está aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="@Url.Action("index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Listar Clientes</li>
            </ol>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <p>
                    @Html.ActionLink("Novo cliente", "Create", "Cliente")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeCliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EnderecoCliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TelefoneCliente)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeCliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnderecoCliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TelefoneCliente)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.ClienteId }) |
                                @Html.ActionLink("Visualizar", "Details", new { id = item.ClienteId }) |
                                @Html.ActionLink("Excluir", "Delete", new { id = item.ClienteId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
    @Html.Partial("_footerAdmin")
</section>

