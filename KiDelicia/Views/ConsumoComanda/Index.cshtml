@model IEnumerable<KiDelicia.Models.ConsumoComanda>

@{
    ViewBag.Title = "Listar Lançamentos";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-share"></i>@ViewBag.Title</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Você está aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="@Url.Action("index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <p>
                    @Html.ActionLink("Novo Lançamento", "Create", "ConsumoComanda")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            Consumidor
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValorConsumo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataConsumo)
                        </th>
                        <th>Opções</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(item.FlagCliente ? ("Cliente: "  + item.Cliente.NomeCliente) : ("Empresa: " + item.Empresa.NomeEmpresa))
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ValorConsumo)
                            </td>
                            <td>
                                @item.DataConsumo.Date.ToShortDateString()
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.ConsumoComandaId }) |
                                @Html.ActionLink("Visualizar", "Details", new { id = item.ConsumoComandaId }) |
                                @Html.ActionLink("Deletar", "Delete", new { id = item.ConsumoComandaId })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    @Html.Partial("_footerAdmin")
</section>