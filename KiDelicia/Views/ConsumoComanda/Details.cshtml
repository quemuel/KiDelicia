@model KiDelicia.Models.ConsumoComanda

@{
    ViewBag.Title = "Visualizar Lançamento";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-share"></i>@ViewBag.Title</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Você está aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="@Url.Action("index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    @if (Model.FlagCliente) {
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Cliente.NomeCliente):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Cliente.NomeCliente)
                        </td>
                    </tr>
                    } else {
                    <r>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.Empresa.NomeEmpresa):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.Empresa.NomeEmpresa)
                        </td>
                    </r>
                    }
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.ValorConsumo):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.ValorConsumo)
                        </td>
                    </tr>
                    <tr>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => model.DataConsumo):
                        </th>
                        <td class="text-left">
                            @Html.DisplayFor(model => model.DataConsumo)
                        </td>
                    </tr>
                </table>
                <p>
                    @Html.ActionLink("Editar", "Edit", new { id = Model.ClienteId }) | @Html.ActionLink("Voltar", "Index")
                </p>
            </div>
        </div>
    </div>
    @Html.Partial("_footerAdmin")
</section>